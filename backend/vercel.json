{
    "version": 2,
    "builds": [
        {
            "src": "backend/server.js",
            "use": "@vercel/node",
            "config": {
                "includeFiles": [
                    "backend/**/*.js",
                    "backend/**/*.json",
                    "backend/.env",
                    "!backend/node_modules/**"
                ]
            }
        }
    ],
    "routes": [
        {
            "src": "/api/(.*)",
            "dest": "backend/server.js",
            "methods": [
                "GET",
                "POST",
                "PUT",
                "DELETE",
                "PATCH",
                "OPTIONS"
            ]
        },
        {
            "src": "/(.*)",
            "dest": "public/index.html",
            "continue": true
        }
    ],
    "env": {
        "NODE_ENV": "production"
    }
}